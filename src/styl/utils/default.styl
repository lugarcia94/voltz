body,
html
  font-family: 'Lato', sans-serif !important
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

*
    outline none

.container
  max-width 1200px
  margin: 0 auto;
  @media(max-width: 1290px)
    max-width 991px

.svg-sprites
  display none

body  
    opacity: 1!important
    transition: all 400ms ease-in-out
    padding-top: 162px
    margin 0
    @media(max-width: 991px)
      padding-top 150px
    
    @media(max-width: 991px)
      padding-top 126px



.active__body
    opacity: 1

::selection
  background $cor02
  color white

body  
    background: #fff!important

a,
input
  &:focus
  &:active
    box-shadow none !important
    outline none !important

input[type="text"]
input[type="password"]
    border: 1px solid #ddd
    height: 40px
    padding: 0 10px

.fbits-responsive-carrinho-desconto-input
