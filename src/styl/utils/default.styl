.fbits-geral 
  .content
    max-width: 1580px!important
    margin: 0 auto
    padding 0 15px
    overflow initial

 

.head-carrinho.headFechamento.container.tyc_container 
    max-width: 100%!important
    background: #000
    display: flex
    align-items: center
    justify-content: space-between
    min-height: 70px
    

    .fbits-center-responsivo
      max-width: 1580px!important
      padding: 0 15px
      width: 100%
      display: flex
      align-items: center
      justify-content: space-between

      @media(max-width: 767px)
        justify-content: center

.container.tyc_container
  max-width: 1280px!important

.tyc_container .fbits-telefones
  background: #000
  margin: 0

.fbits-carrinho ul.fbits-responsive-carrinho-header li 
    background: #fff
    line-height: 3em
    color: #fff
    font-weight: 600
    border-top: 1px solid #777777
    border-bottom: 1px solid #777777
    color: #777777

.fbits-responsive-carrinho-subtotal
  border: none!important
  border-bottom: 1px solid #777777!important
  background: #fff 
  color: #000

.fbits-responsive-carrinho-detalhes
      border: 1px solid #777
      border-radius: 5px

section.fbits-responsive-carrinho
  .botoes-bottom, .botoes-topo
    margin: 0

  .fbits-responsive-carrinho-total 
    overflow: hidden;
    line-height: 3em;
    background: #fff;
    border: none;
    border-top: 0;
    font-weight: 700;
    text-shadow: 0 0;
    font-size: 18px;
    color: #000;

.fbits-carrinho .container-finalizar .btn 
    background-color: #f8f8f8;
    text-transform: uppercase;
    padding: 10px 0;
    color: #fff;
    font-weight: 600;
    border: none;
    border-radius: 5px;
    margin-top: 20px; 
    transition: background-color .4s cubic-bezier(.075,.82,.165,1);
    margin: 10px auto!important;
    width: 90%!important;
    left: 0!important;
    float: none!important;

.botoes-bottom, .botoes-topo
  padding: 0

.fbits-carrinho .fbits-responsive-carrinho-frete-texto
  color: #000

.fbits-responsive-carrinho-desconto-texto, .fbits-responsive-carrinho-frete-texto
  color: #000

.fbits-responsive-carrinho-desconto
  padding-bottom 0

a.btn.btn-danger.icon.remover:before, a.arrow:before, .fbits-carrinho .fbits-responsive-carrinho-item-total .currency
  color: #000


body.fbits-carrinho.container-fluid.top-navigation.white-bg.pace-done.active__body
  font-family: 'Bison-Bold'!important


footer.rodape-cart 
  border-top: 1px solid #777
  font-family: 'Bison-Bold'
  padding: 15px
  margin-top 20px
  .content
    display: flex;
    align-items: center;
    justify-content: space-between
    margin: 0 auto;
    border: none;
    max-width: 1280px;
    flex-wrap: wrap

    @media(max-width: 425px)
      justify-content: center

  .right__rodape, .right__rodape span 
    display: flex;
    align-items: center;

    @media(max-width: 425px)
      flex-wrap: wrap

  .right__rodape span 
    @media(max-width: 425px)
      width 100%
      justify-content: center
    img
      margin: 0 10px

