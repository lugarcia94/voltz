.header
    position: fixed
    top: 0
    left: 0
    width: 100%
    z-index: 99
    display: flex
    flex-wrap: wrap
    background: #000

    &-list
        padding-left: 220px
        display: flex
        align-items: center
        justify-content: space-between
        @media(max-width : 1249px)
            max-width: 55%
            padding: 0
        @media(max-width : 991px)
            max-width: 100%
            padding: 0 30px
        .slick-prev
            left 0
            width: 30px
            height 30px
        .slick-next
            right 0
            width: 30px
            height 30px
        &-item
            padding-right: 35px
            font-size: 12px
            line-height: 15px
            font-weight: 800
            color: #000000
            display: flex!important
            align-items: center
        &-phones
            display: flex
            align-items: center
            justify-content: space-between
            @media(max-width : 991px)
                display: none
        &-phone
            font-size: 12px
            color: #000000
            line-height: 15px
            display: flex
            align-items: center

            @media(max-width 991px)
                color: #333
                font-weight: 600
            &--one
                padding-right: 20px
    &__mainbar
        background: #000
        position: relative
        z-index: 1
        width: 100%
        // border-bottom: 1px solid #cecece
        z-index: 999
        
        &-container
            max-width 1580px
            width: 100%
            margin: 0 auto
            padding: 0 15px
            
        &-wrapper
            display: flex
            align-items: center
            justify-content: space-between
            min-height: 70px 
     
        &-mobile
            display: none
            @media(max-width : 991px)
                display: block
                width: 27px
                height 22px

        &-logo
            position: relative
            display: flex
            align-items: center

            .headerLogo
                max-width: 130px
                width: 130px
                img 
                    max-width: 130px
                    width auto

            @media(max-width : 991px)
                width 33%
                justify-content center

                a
                    width 100%

        &-serach
            max-width: 360px
            width: 100%
            position relative
            @media(max-width : 991px)
                max-width: 100%
                order 1
                padding-bottom: 11px
                padding-top: 31px
                transition: all .3s
            .headerSearch
                width: 100%
                float: none
                margin: 0
                opacity: 1
                visibility: visible

            input.inputSearch 
                font-size: 13px
                color: #666666 
                border: 1px solid #d9d9d9 !important
                &::placeholder
                    font-size: 13px
                    color: #666666

            button#btnBusca.btSearch
                position absolute
                background-image: url('data:image/svg+xml;base64,')
                background-repeat: no-repeat
                background-position: center
                background-size: 15px
                border-radius 50px
                height 39px
                width: 40px
                &:hover
                    color: #ffffff
                .icon.isearch
                    display: none
                    
        &-account, &-order, &-contact
            border-right: 1px solid #D8D8D8
            padding: 12px 20px
            @media(max-width : 991px)
                display: none
            a
                color: #373535
                font-size: 12px
                text-transform: uppercase
                font-weight: 600
                white-space: nowrap 

        &-right
            display: flex
            align-items: center
            justify-content: space-between
            max-width: 360px
            width 100%
            position relative

            @media(max-width : 991px)
                width auto

        &-links
            display: flex 
            align-items: center

            img
                max-width: 40px;
            span
                font-size 13px
                font-weight: 600
                color: #333
                display: block

                a
                    display block
                    color: #333
                    font-weight: 800
                    &:after 
                        content: '';
                        display: inline-block;
                        width: 10px;
                        height: 10px;
                        margin-left: 5px;
                        background-image: url('data:image/svg+xml;base64,');
                        background-repeat: no-repeat;
                        background-position: center;
                        background-size: 10px;
            &.atendimento
                position relative
                .atendimento__sub
                    display: none;
                    position: absolute
                    top: 50px
                    left: 50%
                    transform: translateX(-50%)
                    padding: 20px 15px
                    background-color: #ffffff
                    border: 1px solid #d2d2d2
                    transition: 1s
                    h3
                        font-size: 15px
                        text-transform: uppercase
                        font-weight: 800
                        margin-bottom: 10px
                        color: $cor02
                        &:before
                            content: ''
                            width: 100%
                            height: 15px 
                            position absolute
                            top: 0
                            left: 0
                            background-color: #fff
                    &:before
                        content: ''
                        width: 15px 
                        height: 15px
                        transform: rotate(45deg)
                        position: absolute
                        top: -8px
                        left: 47%
                        background-color: #d2d2d2
                    &:after
                        content: ''
                        width: 100% 
                        height: 15px
                        position: absolute
                        top: -15px
                        left: 0
                        background-color: transparent
                &:hover
                    .atendimento__sub
                        display: block
            &.user-bemvindo
                .login__sub
                    display: none;
                    position: absolute
                    top: 50px
                    left: 50%
                    transform: translateX(-50%)
                    padding: 20px 15px
                    background-color: #ffffff
                    border: 1px solid #d2d2d2
                    transition: 1s
                    h3
                        font-size: 15px
                        text-transform: uppercase
                        font-weight: 800
                        margin-bottom: 10px
                        color: $cor02
                        &:before
                            content: ''
                            width: 100%
                            height: 15px 
                            position absolute
                            top: 0
                            left: 0
                            background-color: #fff
                    a
                        text-transform uppercase
                        &:after
                            display: none
                    &:before
                        content: ''
                        width: 15px 
                        height: 15px
                        transform: rotate(45deg)
                        position: absolute
                        top: -8px
                        left: 47%
                        background-color: #d2d2d2
                    &:after
                        content: ''
                        width: 100% 
                        height: 15px
                        position: absolute
                        top: 0
                        left: 0
                        background-color: #fff
                &:hover
                    .login__sub
                        display: block
        &-cart
            display: flex 
            max-width 300px
            width 100%
            justify-content: space-between
            align-content: center

            a
                font-size: 12px
                color: #646464   
                font-family: 'Graphit-Bold'

                @media(max-width: 991px)
                    margin-right 10px

                @media(max-width: 320px)
                    margin: 0

                &:nth-child(2)
                    display: flex
                    align-items: center

                    @media(max-width: 991px)
                        display: none
                    &:before
                        content: ''
                        background-image: url('data:image/png;base64,')
                        width: 20px
                        height: 20px
                        display: block
                        margin-right 5px
                        background-repeat: no-repeat
                        background-position: center

                &:hover
                    color: #fff

            span
                font-size: 13px
                font-weight: 600
                color: #fff
                margin-left: 5px

            span.minicart-qtde-itens
                &:before
                &:after 
                    display: none !important
            @media(max-width : 991px)
                padding: 0
                max-width: none
                width: auto

            @media(max-width: 425px)
                width: 45%
            .carrinho.carrinhoHead
                a
                    float none
                    display: flex!important
                    align-items: center
                .icon.icart
                    display: none
                .minicart-txt-itens
                    display: none
                .minicart-qtde-itens
                    color: #646464 !important
                    font-size: 12px
                    background: #fff
                    color: #333;
                    float: none
                    position: absolute
                    left: 20px
                    right auto
                    top: auto
                    bottom: 7px
                    border-radius: 50%
                    height: 15px
                    width: 15px
                    display: flex
                    align-items: center
                    justify-content: center
                    z-index: 999
                    padding: 0
    

    @media(max-width: 991px)
        &__mainbar
            &-container
                padding 0 15px
            &-links
                display none
            &-logo
                width: 60%
                .headerLogo
                    max-width: 100% !important 
                    img 
                        max-width: 100% !important
                        margin: 0
            &-mobile
                height: 30px
            &-serach
                padding-top 10px

    @media(max-width: 425px)
        &__mainbar
            &-logo
                width: 30%

.header__navigation
    max-width 500px
    width 100%

.carrinho.carrinhoHead
    position relative!important
    width auto!important
    height auto!important
.close__menu
    display: none
    top: 25px;
    left: 15px;
    position: fixed;
    width: 20px;
    background: #000;

@media(max-width: 991px)
    .header__navigation
        left -100%
        opacity 0
        visibility hidden
        position: fixed
        transition: all 300ms ease-in-out
        height: 100vh
        background: #000
        width: 50%
        top: 70px
        padding-left 15px

    .menu__open
        .header__navigation
            left 0
            opacity 1
            visibility: visible

        .close__menu
            display: block

    .category__filter
        .category__ordenation
            display: none

.second__menu
    span
        cursor pointer

    .header-info-close
        display none
        position: absolute
        right: 15px
        z-index: 999999
        top: 15px
        cursor pointer

    ul.header-info-menu
        position fixed
        right -100%
        visibility hidden
        opacity 0
        transition all 250ms ease-in-out
        top: 0
        padding-left: 45px
        padding-bottom: 50px
        background: #000
        color: grey
        height: 100%
        z-index: 9999
        width 300px
        padding-top 30px

        li
            margin-bottom 20px

            a
                color: grey
                font-family: 'Graphit-Regular', sans-serif !important
                font-size 15px

                &:hover
                    color #fff

.open__second
    .header-info-close
        display block
    .second__menu
        ul.header-info-menu
            right 0
            opacity 1
            visibility visible