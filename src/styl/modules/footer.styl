footer.rodape-site
    background: #191919
    display: flex
    align-items: flex-start
    flex-wrap: wrap
    justify-content: space-between


    .social
        display: flex
        align-items: center
        flex-wrap: wrap 

        li
            &:first-child
                width 100%
                margin: 0
                margin-bottom 10px
            
            margin-right: 15px
    ul 
        max-width 1360px
        padding: 80px 15px
        margin: 0 auto

        li
            font-size: 18px
            color: #fff
            margin-bottom 10px

            a
                font-size: 16px
                color: #808080
                text-decoration: none

                &:hover
                    color: #fff



    .copy__footer
        width 100%
        display: flex
        align-items: center
        justify-content: space-between
        background: #000000
        min-height: 80px

        span
            margin 0 15%
            display: flex
            align-items: center
            font-size: 15px

            img
                margin-left 5px
