        li
            flex: 0 0 30%
            font-size: 14px
            color: #434343 
            line-height: 40px
            padding-left 5px
            font-weight: 700

            @media(max-width: 767px)
                flex: 0 0 50%


.produto .fbits-avaliacao
    @media(max-width: 767px)
        width 100%
