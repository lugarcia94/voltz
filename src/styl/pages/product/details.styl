        content: "\eb36";
        font-family: 'icofont';
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        color: #007e97;
        font-size: 20px;

.conteudoAbasProduto 
    font-size: 16px
    color: #333333
    line-height: 18px
    p 
        font-size: 16px
        color: #333333
        line-height: 18px
 

.ui-slider-tabs-list li.selected
    background-color: transparent
    border-bottom: 4px solid $cor01!important
   
    a
        h3
            color #333333
            font-size: 20px
            font-weight 700

            @media(max-width 425px)
                font-size 15px
  
.ui-slider-tab-content
    padding: 0!important

    .paddingbox
        > span  
            font-size: 14px
            color: #3D161D
            font-weight: 600
            padding-left 15px
            display: block 
            margin: 30px 0
            line-height: 16px

            @media(max-width: 992px)
                padding: 0
 
 
 
 
