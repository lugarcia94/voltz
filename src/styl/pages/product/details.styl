.ui-slider-tabs-list li
    border: none!important
    min-height: 40px!important
    padding: 0 20px!important
    padding: 0!important

    &:hover
        background: none!important

    a  
        line-height: 40px!important

        h3
            color: #848181
            font-size: 20px
            font-weight: 400
            text-transform: none
            text-transform: uppercase

