.product__zoom
    width: 100%
    max-width: 600px
    position relative
    display: flex
    flex-wrap: wrap

    @media(max-width: 1250px)
        max-width 45%

    @media(max-width: 992px)
        max-width 100%
  
    .verDetalhes
        display: none

    .etiqueta__produto
        z-index: 1    

        #fbits-div-preco-off
            display: block!important
            

.product__price
    .fbits-comprar 
        display: none


.fbits-componente-imagem
    max-width 530px

    iframe 
        width 100%

    @media(max-width: 1250px)
        max-width 100%

    @media(max-width 991px)
        margin: 0 auto
 

#galeria 
    a  
 
        img     
            @media(max-width 992px)
                max-width 100%!important 

    .slick-next, .slick-prev 
        position: absolute
        background-color: transparent
        display none!important

    .slick-arrow
        width 85px!important
        height 30px
        background-size: auto !important
    .slick-next
        bottom -20px
        font-size: 0
        background-image: url('data:image/png;base64,')!important
        transform: scale(1)!important 
        background-position: center

        @media(max-width: 992px)
            right -20px!important 
            bottom: 0!important 
            top: 16%

    .slick-prev
        top: -40px
        font-size: 0
        background-image: url('data:image/png;base64,')!important
        transform: scale(-1) 
        background-position: center

        @media(max-width: 992px)
            left -20px!important 
            transform: rotate(360deg)!important
            bottom: 0!important 
            top: 38%