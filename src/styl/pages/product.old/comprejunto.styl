.product__comprejunto
    @media(max-width: 991px)
        width: 50%
        order: -1
    @media(max-width: 768px)
        width: 100%
        order: 2

    #divGruposProdutoRecomendado
        background: #f9f9f9
        padding: 10px
        width: 100%
        transition: all 300ms ease-in-out
        @media(min-width: 992px)
            margin-top: 20px

    #divGrupoProduto
        transition: all 300ms ease-in-out
        .line
            display: inline-block

    #divTitulo
        font-size: 0
        line-height: 0
        background: none
        text-transform: none
        padding: 0
        + span
            display: none

        &:before
            content: 'Aproveite e compre junto!'
            font-size: 22px
            line-height: 22px
            color: $cor02
            font-weight: 300
            text-transform: none
            padding: 10px 0 5px 0
            display: block


    #ulGrupoProduto
        position: relative
        transition: all 300ms ease-in-out
        &:last-child
            margin: 0

        >li
            background: #fff
            padding: 5px 20px 20px 20px
            margin: 0 0 20px 0
            transition: all 300ms cubic-bezier(1, -0.35, 0, 1.34)

        &:before
            background: #000
            content: ''
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            z-index: 1
            opacity: 0
            cursor: pointer
            transition: all 300ms ease-in-out

        #divSpotProdutoRecomendado
            align-items: stretch
            display: flex

        [id*="view-item-quantidade"]
            display: none

        &:not(.cpj-md-on)
            #spotVejaTambem-Principal
            .divisor
            .divisorIgual
            .opcoesCombo
            #precoCompreJuntoPorProduto
                display: none

            .spotRecomendadoText
                display: flex
                flex-direction: column
                align-items: center
                justify-content: space-between
                padding: 5px 0 5px 20px
                .spotTitle
                    font-size: 12px
                    color: $cor02
                    text-transform: uppercase
                    font-weight: 600

            .p-de
                font-size: 11px
                color: #7c7c7c
                font-weight: 500
                display: block
                width: 100%

            .p-por
                font-size: 11px
                color: $cor02
                font-weight: 500
                display: block
                width: 100%
                em
                    font-style: normal
                    color: $cor01
                    font-weight: 600


            .divFotosProduto
                min-width: 70px
                max-width: 70px
                height: 80px
                a
                    display: block
                img
                    max-width: 100%
                    height: auto
                    display: block

        &.cpj-md-on
            position: fixed
            left: 0
            right: 0
            top: 0
            bottom: 0
            z-index: 10000
            >li
                background: #f9f9f9
                z-index: 10
                width: 100%
                max-width: 600px
                top: 50%
                left: 50%
                position: fixed
                transform: translate(-50%, -50%)
                padding: 15px
            &:before
                opacity: 0.6

            #divSpotProdutoRecomendado
                background: #fff
                padding: 10px
                margin-bottom: 15px

            .divFotosProduto
                min-width: 70px
                max-width: 70px
                height: 80px
                a
                    display: block
                img
                    max-width: 100%
                    height: auto
                    display: block


            .spotRecomendadoText
                display: flex
                flex-direction: column
                justify-content: space-between
                padding: 0 0 0 20px
                .spotTitle
                    font-size: 16px
                    color: $cor02
                    font-weight: 500
                    text-transform: uppercase

            .p-de
            .p-por
                display: none


            .atributos-container
                .atributo-div
                    font-size: 12px
                    line-height: 12px
                    text-transform: none
                    color: $cor02
                    margin: 10px 0

            #precoCompreJuntoPorProduto
                display: inline-block
                width: 100%

            #divPrecoCompreJuntoPorProduto
                background: #fff
                padding: 10px


            #divFormaPagamento
                .precoDe
                    font-size: 12px
                    color: #ababab
                    margin-right: 5px

                .precoPor
                    color: #40dfcf
                    font-size: 22px
                    font-weight: 600
                    display: flex
                    align-items: center

                .precoParcela
                    font-size: 12px
                    color: #3e3e3e
                    margin-bottom: 2px
                    width: 100%

                    .fbits-parcela-x
                    .fbits-parcela
                    .fbits-quantidadeParcelas
                        font-weight: 600

                .precoVista
                    text-transform: none
                    .fbits-boleto-ou
                        display: none

                    .fbits-boleto-preco
                        color: #00d833
                        font-size: 15px
                        font-weight: 600

                    .fbits-boleto-avista,
                    .fbits-boleto-desconto
                        font-size: 12px
                        color: #3e3e3e

            #btnComprarTodos
                margin-top: 10px





    #btnComprarTodos
        background: #00d833
        cursor: pointer
        color: #fff
        font-size: 0
        line-height: 13px
        font-weight: 600
        -webkit-box-align: center
        -ms-flex-align: center
        align-items: center
        -webkit-box-pack: center
        -ms-flex-pack: center
        justify-content: center
        text-transform: uppercase
        display: -webkit-box
        display: -ms-flexbox
        display: flex
        height: 45px
        width: 100%
        text-decoration: none
        -webkit-transition: all 150ms ease-in-out
        transition: all 150ms ease-in-out
        position: relative

        i
            &:before
                content: 'COMPRE ESTES ITENS JUNTOS'
                position: absolute
                width: 100%
                display: block
                font-size: 14px
                color: #fff
                left: 0
                top: 50%
                transform: translateY(-50%)
                font-style: normal
                font-weight: 700

        &:hover
            color: #fff
            text-decoration: none
            background: #5fad0c
            opacity: 0.9

a#btnContinuarComprando
    background: #40e0d0!important
    border-radius: 2px
 

#divCompreJunto:after 
    display: block
    clear: both
    content: ''

.compre__junto-wrapper

    .valorAtributoFoto
        margin-bottom 20px

    .variante, .atributos-container
        position static
        width 100%
        
    .atributos-container
        border: 1px solid #DED7C1
        display: block
        border-radius: 2px 
        max-height: 35px
        display: flex
        align-items: center
        justify-content: space-between
        flex-wrap: wrap
        margin: 10px 0 0 0

        [data-codigoatributo]
            > div 
                margin: 0
                >* 
                    padding: 0
                    margin: 0

        [data-atributoselecionado="true"]
            border: 1px solid #A85449

    .tmbMore:before, .divisor:before, .tmbIgual:before, .divisorIgual:before
        background: transparent
        color:#A85449
        font-size: 40px

    #divPrecoCompreJuntoPorProduto
        display: flex
        justify-content: space-between
        align-items: center
        max-width: 482px
        width 100%
        
        
        @media(max-width 1000px)
            max-width 100%
            width 100%
            flex-wrap: wrap
    
    .bt.comprarProduto
        background: $cor01
        color: #fff
        font-size: 0
        text-transform: uppercase
        width 100%
        height 50px

        &:before
            content: 'Comprar junto'
            font-size: 17px
            font-weight: 700

    #precoCompreJuntoPorProduto
        max-width 100%
        width 100%
        margin: 0
        border: none
        padding: 0
        display: flex
        justify-content: center

        @media(max-width 992px)
            margin: 20px 0

        #divFormaPagamento
            .precoPor
                margin: 0
                color: $cor01
                font-weight: 700
                font-size: 25px
                // line-height: 25px
                text-align: left
                @media(max-width: 992px)
                    text-align: center
            .precoDe
                color: #3d161d
                font-size: 0.88rem
                font-weight: 600
                letter-spacing: 0.04rem

                @media(max-width: 992px)
                    text-align: center

            .precoParcela
                font-size: 14px
                color: $cor01
                line-height: 14px
                @media(max-width: 992px)
                    text-align: center
            .fbits-quantidadeParcelas, .fbits-parcela-x, .fbits-parcela
                font-weight: 700


            .precoVista
                display: none

            .precoPor.com-precoDe:before
                display: none

    #view-item-quantidade-0-normal
        display: none

    .spotVejaTambem 
        width: 165px
        position: relative

        @media(max-width: 992px)
            width 45%

        #divSpotProdutoRecomendado 
            width: 100%

    .open__item
        [data-atributospagproduto] >div
            display: flex
            background: #fff
            z-index: 999
            width: 100%!important
            max-height: 1000px
            justify-content: center


    [data-atributospagproduto] >div
        max-height: 0px
        overflow hidden
        transition: all .3s ease-in-out
        float: none
        // padding: 5px

        >* 
            width: (100% / 3) !important

            

    [data-atributoselecionado="True"]
        border: 1px solid $cor01 !important
        
    [id^="produto-item"]
        display: flex!important
        align-items: center
        flex-wrap: wrap
        justify-content: space-between

    .divisor, .divisorIgual
        &:before
            margin: 0 auto

    #ulGrupoProduto 
        li  
            .nomeRecomendado
                text-align: left
                margin-top 20px
                margin-bottom 10px

                a 
                    text-align: center
                    h3
                        font-size: 12px
                        color: #6D6A5C
                        font-weight: 600
                        text-align: left 
                        text-transform: none

    .atributo-div
        width 100%
        color: #6D6A5C
        font-size: 12px
        font-weight: 600
        text-align: left
        padding: 0 15px
        display: flex
        justify-content: space-between
        align-items: center
        cursor pointer
        height: 35px
        margin: 0
        &:after
            @extend $ico-before
            background-image svg-inline(downselect)
            height: 10px
            width: 10px 
            background-size: 100%
    .line 
        display: flex
        align-items: center
        flex-wrap: wrap
        @media(max-width: 992px)
            justify-content: center

        &:after
            content: 'E aproveite o desconto!'
            font-size: 18px
            color: #6D6A5C
            display: block
            width 100%

            @media(max-width: 992px)
                text-align: center
        span 
            border-color: #3D161D !important 
            top: 17px
            // &:before
            //     content: ''
            //     height: 1px
            //     width: 100%
            //     position: absolute
            //     background: #3D161D
            //     top: 30%
            //     max-width: 920px
            //     right: 0
        
        // @media(max-width: 992px)
        //     display: none

        h3  
            margin: 0
            font-size: 0px
            color: #A85449
            font-weight: 600
            padding: 0 15px 0 0
            display: flex
            align-items: center
            text-transform: none
            line-height: 0px
            position relative
            @media(max-width: 992px)
                padding: 0 15px

            &:before 
            &:after
                font-size: 30px
                line-height: 30px

            &:before
                content: 'Compre'
                font-weight: 300
            
            &:after
                content: 'junto'
                display: block
                margin: 0 0 0 10px
               

            // @media(max-width: 992px)
            //     font-size: 30px
            //     justify-content: center
 

.divisor
    @media(max-width 768px)
        position: absolute
        top: 20%
        left: 50%
        transform: translateX(-50%)
        
ul#ulGrupoProduto
    @media(max-width 992px)
        position relative

.divisorIgual
    @media(max-width 992px)
        display: none

.open__item 
    max-height: 300px!important
    overflow-y: auto
