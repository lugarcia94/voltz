.drill-down.fadeIn
    border: 1px solid #FFE1C6
    border-radius: 4px
    padding: 35px 40px
    width: 360px
    >a
        display: block!important
        position: static
        margin: 0 auto
        width: 199px!important
        height: 47px!important
        margin-top: 20px
        .cartGo
            float: none
            display: block
            width: 100%
            height: 100%
            font-size: 0px
            background: #ACE28F
            border-radius: 4px
            &:hover
                background: #63A440
            &:before
                content: 'Finalizar compra'
                text-transform: uppercase
                font-size: 14px
                color: #ffffff
                font-weight: 600
                line-height: 47px

    .cartProd
        color: #373737
        font-size: 13px
        font-weight: 600
        text-transform: none
    .cartImg
        margin-right: 15px
    .cartPrice
        color: $cor01
        font-size: 14px
        font-weight: 600
        line-height: 14px
        height 14px
        margin-top: 20px
    #cartAtributos
        display: none
    .cartItem 
        border: none
        .icon.remover.replace
            background-repeat: no-repeat
            background-position: center
            background-size: cover!important    
            background-image: url("data:image/png;base64,")!important
            width: 10px
            height: 13px
            right: 40px
            top: 15px
        .fbits-campo-quantidade
            position: absolute
            left: 85px
            top: 45px
    .fbits-campo-quantidade
        &:before
            display: none
        a
            display: none!important
        &:after
            content: 'Unid'
            font-size: 12px
            font-weight: 600
            line-height: 12px
            height: auto
            color: #A1A0A1
            text-transform: none
        .fbits-valor
            font-size: 12px
            font-weight: 600
            color: #A1A0A1
            text-transform: none
            border: none
            width: auto
            height: auto
            margin-right: 3px
            line-height: 21px
    .cartTotalPrice
        font-size: 0px
        color: #373737
        font-weight: 400
        text-align: center
        padding-top: 20px
        &:before
            content: 'Pre√ßo total de'
            font-size: 14px
            color: #373737
            font-weight: 400
            margin-right: 3px
        #fbits-resumo-valor-total
            font-weight: bold
            font-size: 14px