.ruler
    border-bottom: 1px solid #cecece
    margin-top: -30px;
    &__wrapper
        padding: 20px 0
    
    &__item
        flex: 0 1 235px
        display: flex !important
        align-items: center
        justify-content: center;
        span
            display: block
            font-size: 13px
            color: #020202
            line-height: 15px
        &.frete
            &:before
                content: '';
                display: inline-block;
                width: 55px
                height:32px
                margin-right: 15px
                background-image: url('data:image/png;base64,');
                background-repeat: no-repeat;
                background-position: center;
                background-size: 55px 32px
        &.card
            &:before
                content: '';
                display: inline-block;
                width: 35px
                height:30px
                margin-right: 15px
                background-image: url('data:image/png;base64,');
                background-repeat: no-repeat;
                background-position: center;
                background-size: 35px 30px
        &.qualidade
            &:before
                content: '';
                display: inline-block;
                width: 31px
                height:31px
                margin-right: 15px
                background-image: url('data:image/png;base64,');
                background-repeat: no-repeat;
                background-position: center;
                background-size: 31px
        &.segura
            &:before
                content: '';
                display: inline-block;
                width: 26px
                height:31px
                margin-right: 15px
                background-image: url('data:image/png;base64,');
                background-repeat: no-repeat;
                background-position: center;
                background-size: 26px 31px
    &__destaque
        font-size: 15px !important
        font-weight: 600
    .info__list
        border: 1px solid $cor01
        display: flex
        justify-content: space-between
        align-items: center
        flex-wrap: wrap
        padding: 25px 20px 
        margin-bottom 40px

        li  
            display: flex
            align-items: center 

            @media(max-width: 992px)
                justify-content: center

            span
                font-size: 14px
                line-height: 16px
                color: #6D6A5C
                text-shadow: 0 0
            
            &:nth-child(1)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(r1)
                    transition: $transition
                    width: 35px
                    height: 35px
                    background-size: 35px
                    margin-right 5px

            &:nth-child(2)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(r2)
                    transition: $transition
                    width: 35px
                    height: 35px
                    background-size: 35px
                    margin-right 5px

            &:nth-child(3)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(r3)
                    transition: $transition
                    width: 35px
                    height: 35px
                    background-size: 24px
                    margin-right 5px

            &:nth-child(4)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(r4)
                    transition: $transition
                    width: 35px
                    height: 35px
                    background-size: 35px
                    margin-right 5px

            &:nth-child(5)
                &:before
                    @extend $ico-before
                    // background-image svg-inline(r5)
                    transition: $transition
                    width: 35px
                    height: 35px
                    background-size: 35px
                    margin-right 5px  

            strong  
                display: block
                text-transform: uppercase
                color: $cor01

    @media(max-width: 991px)
        &__item
            justify-content: center
