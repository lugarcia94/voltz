.user-account
  align-items center
  color #606060
  display inline-flex
  flex-flow column nowrap
  font-size 11px
  font-weight 800
  margin-right 35px
  text-decoration none
  text-transform uppercase
  transition all 150ms ease-in-out

  &:hover
    color $cor02
    text-decoration none

.icon-user
  fill $cor02
  flex 0 0 auto
  height 24px
  margin-bottom 3px
  width 24px

@media (min-width 1300px)
  .user-account
    margin-right 25px

  .icon-user
    margin 0